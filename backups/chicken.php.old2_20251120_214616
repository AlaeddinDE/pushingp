            </div>
            <div class="stat-box">
                <div class="stat-label">üìä Multiplikator</div>
                <div class="stat-value" id="multiplier">1.00x</div>
            </div>
            <div class="stat-box">
                <div class="stat-label">üí∞ Potenzial</div>
                <div class="stat-value success" id="potential">0.00‚Ç¨</div>
            </div>
            <div class="stat-box">
                <div class="stat-label">üéØ Einsatz</div>
                <div class="stat-value danger" id="currentBet">0.00‚Ç¨</div>
            </div>
        </div>

        <div class="road-wrapper">
            <canvas id="gameCanvas" width="1000" height="600"></canvas>
        </div>

        <div class="controls-panel">
            <div id="configSection">
                <div class="bet-input-wrapper">
                    <label class="bet-label">üí∞ Einsatz festlegen</label>
                    <input type="number" id="betAmount" class="bet-input" min="0.10" max="100" step="0.10" value="1.00">
                </div>
                
                <div class="quick-bets">
                    <button class="quick-bet-btn" onclick="setBet(1)">1‚Ç¨</button>
                    <button class="quick-bet-btn" onclick="setBet(5)">5‚Ç¨</button>
                    <button class="quick-bet-btn" onclick="setBet(10)">10‚Ç¨</button>
                    <button class="quick-bet-btn" onclick="setBet(20)">20‚Ç¨</button>
                </div>
                
                <button class="action-btn start-btn" onclick="startGame()">üêî Spiel starten</button>
            </div>
            
            <button id="cashoutBtn" class="action-btn cashout-btn" onclick="cashout()" style="display: none;">
                üí∞ Auszahlen: <span id="cashoutAmount">0.00‚Ç¨</span>
            </button>
        </div>
    </div>

    <div class="result-overlay" id="resultOverlay" onclick="closeResult()">
        <div class="result-box" onclick="event.stopPropagation()">
            <div class="result-icon" id="resultIcon">üéâ</div>
            <div class="result-title" id="resultTitle">Gewinn!</div>
            <div class="result-amount" id="resultAmount">+0.00‚Ç¨</div>
            <button class="action-btn start-btn" onclick="resetGame()">üîÑ Neues Spiel</button>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        let balance = <?= $casino_available_balance ?>;
        let gameActive = false;
        let currentBet = 0;
        let crossedRoads = 0;
        let currentMultiplier = 1.0;
        let potentialWin = 0;
        
        // Game state
        const lanes = 10;
        const laneHeight = 60;
        const chicken = { x: 500, y: 580, size: 40 };
        const cars = [];
        
        function setBet(amount) {
            document.getElementById('betAmount').value = amount.toFixed(2);
        }
        
        function updateBalance() {
            document.getElementById('balance').textContent = balance.toFixed(2).replace('.', ',') + ' ‚Ç¨';
        }
        
        function drawRoad() {
            // Sky
            ctx.fillStyle = '#87CEEB';
            ctx.fillRect(0, 0, canvas.width, 100);
            
            // Grass bottom
            ctx.fillStyle = '#2d5016';
            ctx.fillRect(0, canvas.height - 100, canvas.width, 100);
            
            // Road lanes
            for (let i = 0; i < lanes; i++) {
                const y = 100 + (i * laneHeight);
                
                // Asphalt
                ctx.fillStyle = i % 2 === 0 ? '#2c3e50' : '#34495e';
                ctx.fillRect(0, y, canvas.width, laneHeight);
                
                // Lane markings
                ctx.strokeStyle = '#ecf0f1';
                ctx.lineWidth = 3;
                ctx.setLineDash([20, 20]);
                ctx.beginPath();
                ctx.moveTo(0, y + laneHeight / 2);
                ctx.lineTo(canvas.width, y + laneHeight / 2);
                ctx.stroke();
                ctx.setLineDash([]);
            }
            
            // Sidewalk top
            ctx.fillStyle = '#95a5a6';
            ctx.fillRect(0, 80, canvas.width, 20);
            
            // Sidewalk bottom  
            ctx.fillStyle = '#95a5a6';
            ctx.fillRect(0, canvas.height - 100, canvas.width, 20);
        }
        
        function drawChicken() {
            ctx.save();
            ctx.translate(chicken.x, chicken.y);
            
            // Body
            ctx.fillStyle = '#fff';
            ctx.beginPath();
            ctx.arc(0, 0, chicken.size / 2, 0, Math.PI * 2);
            ctx.fill();
            
            // Head
            ctx.fillStyle = '#fff';
            ctx.beginPath();
            ctx.arc(0, -chicken.size / 3, chicken.size / 3, 0, Math.PI * 2);
            ctx.fill();
            
            // Beak
            ctx.fillStyle = '#ff9800';
            ctx.beginPath();
            ctx.moveTo(chicken.size / 4, -chicken.size / 3);
            ctx.lineTo(chicken.size / 2, -chicken.size / 3);
            ctx.lineTo(chicken.size / 3, -chicken.size / 4);
            ctx.fill();
            
            // Eyes
            ctx.fillStyle = '#000';
            ctx.beginPath();
            ctx.arc(-5, -chicken.size / 2.5, 3, 0, Math.PI * 2);
            ctx.arc(5, -chicken.size / 2.5, 3, 0, Math.PI * 2);
            ctx.fill();
            
            // Comb
            ctx.fillStyle = '#f44336';
            ctx.beginPath();
            ctx.arc(0, -chicken.size / 1.5, 8, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.restore();
        }
        
        function drawCars() {
            cars.forEach(car => {
                ctx.save();
                ctx.translate(car.x, car.y);
                
                // Car body
                ctx.fillStyle = car.color;
                ctx.fillRect(-30, -15, 60, 30);
                
                // Car top
                ctx.fillRect(-20, -30, 40, 15);
                
                // Windows
                ctx.fillStyle = '#1a1a1a';
                ctx.fillRect(-18, -28, 15, 12);
                ctx.fillRect(3, -28, 15, 12);
                
                // Wheels
                ctx.fillStyle = '#000';
                ctx.beginPath();
                ctx.arc(-20, 15, 8, 0, Math.PI * 2);
                ctx.arc(20, 15, 8, 0, Math.PI * 2);
                ctx.fill();
                
                // Headlights
                ctx.fillStyle = '#ffeb3b';
                if (car.speed > 0) {
                    ctx.fillRect(28, -10, 5, 8);
                    ctx.fillRect(28, 2, 5, 8);
                } else {
                    ctx.fillRect(-33, -10, 5, 8);
                    ctx.fillRect(-33, 2, 5, 8);
                }
                
                ctx.restore();
            });
        }
        
        function updateCars() {
            cars.forEach(car => {
                car.x += car.speed;
                
                // Respawn
                if (car.speed > 0 && car.x > canvas.width + 50) {
                    car.x = -50;
                } else if (car.speed < 0 && car.x < -50) {
                    car.x = canvas.width + 50;
                }
            });
        }
        
        function spawnCars() {
            cars.length = 0;
            const colors = ['#e74c3c', '#3498db', '#2ecc71', '#f39c12', '#9b59b6', '#1abc9c'];
            
            for (let i = 0; i < lanes; i++) {
                const y = 100 + (i * laneHeight) + laneHeight / 2;
                const speed = (Math.random() > 0.5 ? 1 : -1) * (2 + Math.random() * 3);
                const x = Math.random() * canvas.width;
                
                cars.push({
                    x: x,
                    y: y,
                    speed: speed,
                    color: colors[Math.floor(Math.random() * colors.length)]
                });
            }
        }
        
        function checkCollision() {
            for (let car of cars) {
                const dx = Math.abs(chicken.x - car.x);
                const dy = Math.abs(chicken.y - car.y);
                
                if (dx < 50 && dy < 30) {
                    return true;
                }
            }
            return false;
        }
        
        function animate() {
            if (!gameActive) return;
            
            drawRoad();
            updateCars();
            drawCars();
            drawChicken();
            
            if (checkCollision()) {
                gameOver(false);
                return;
            }
            
            requestAnimationFrame(animate);
        }
        
        canvas.addEventListener('click', function(e) {
            if (!gameActive) return;
            
            const rect = canvas.getBoundingClientRect();
            const clickY = e.clientY - rect.top;
            const canvasClickY = (clickY / rect.height) * canvas.height;
            
            // Move chicken up
            if (canvasClickY < chicken.y - 50) {
                chicken.y -= laneHeight;
                
                if (chicken.y < 100) {
                    chicken.y = 100;
                }
                
                crossStreet();
            }
        });
        
        async function startGame() {
            const bet = parseFloat(document.getElementById('betAmount').value);
            
            if (bet < 0.10 || bet > balance) {
                alert('Ung√ºltiger Einsatz!');
                return;
            }
            
            try {
                const response = await fetch('/api/casino/chicken_cross.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'start', bet })
                });
                const data = await response.json();
                
                if (data.status === 'success') {
                    gameActive = true;
                    currentBet = bet;
                    crossedRoads = 0;
                    balance -= bet;
                    updateBalance();
                    
                    chicken.y = 580;
                    chicken.x = 500;
                    
                    spawnCars();
                    
                    document.getElementById('configSection').style.display = 'none';
                    document.getElementById('statsPanel').style.display = 'grid';
                    document.getElementById('currentBet').textContent = bet.toFixed(2) + '‚Ç¨';
                    
                    updateStats(0, 1.0, 0);
                    animate();
                } else {
                    alert('Fehler: ' + data.error);
                }
            } catch (error) {
                alert('Fehler: ' + error.message);
            }
        }
        
        async function crossStreet() {
            if (!gameActive) return;
            
            try {
                const response = await fetch('/api/casino/chicken_cross.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'cross', road: crossedRoads })
                });
                const data = await response.json();
                
                if (data.status === 'safe') {
                    crossedRoads++;
                    currentMultiplier = data.multiplier;
                    potentialWin = data.potential_win;
                    
                    updateStats(crossedRoads, currentMultiplier, potentialWin);
                    
                    document.getElementById('cashoutBtn').style.display = 'block';
                    document.getElementById('cashoutAmount').textContent = potentialWin.toFixed(2) + '‚Ç¨';
                    
                    if (crossedRoads >= 10) {
                        setTimeout(() => cashout(), 1000);
                    }
                } else if (data.status === 'hit') {
                    gameOver(false);
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
        
        async function cashout() {
            if (!gameActive) return;
            
            try {
                const response = await fetch('/api/casino/chicken_cross.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'cashout' })
                });
                const data = await response.json();
                
                if (data.status === 'success') {
                    gameActive = false;
                    balance = data.new_balance;
                    updateBalance();
                    showResult(true, data.win, data.multiplier);
                }
            } catch (error) {
                alert('Fehler: ' + error.message);
            }
        }
        
        function gameOver(won) {
            gameActive = false;
            showResult(won, 0, 0);
        }
        
        function updateStats(crossed, mult, pot) {
            document.getElementById('crossed').textContent = crossed + '/10';
            document.getElementById('multiplier').textContent = mult.toFixed(2) + 'x';
            document.getElementById('potential').textContent = pot.toFixed(2) + '‚Ç¨';
        }
        
        function showResult(won, amount, mult) {
            const overlay = document.getElementById('resultOverlay');
            const icon = document.getElementById('resultIcon');
            const title = document.getElementById('resultTitle');
            const amountEl = document.getElementById('resultAmount');
            
            if (won) {
                const profit = amount - currentBet;
                icon.textContent = 'üéâ';
                title.textContent = 'Gewonnen!';
                title.style.color = 'var(--success)';
                amountEl.textContent = '+' + profit.toFixed(2) + '‚Ç¨ (' + mult.toFixed(2) + 'x)';
                amountEl.style.color = 'var(--success)';
            } else {
                icon.textContent = 'üí•';
                title.textContent = '√úberfahren!';
                title.style.color = 'var(--error)';
                amountEl.textContent = '-' + currentBet.toFixed(2) + '‚Ç¨';
                amountEl.style.color = 'var(--error)';
            }
            
            overlay.style.display = 'flex';
        }
        
        function closeResult() {
            document.getElementById('resultOverlay').style.display = 'none';
        }
        
        function resetGame() {
            closeResult();
            gameActive = false;
            crossedRoads = 0;
            chicken.y = 580;
            chicken.x = 500;
            
            document.getElementById('configSection').style.display = 'block';
            document.getElementById('statsPanel').style.display = 'none';
            document.getElementById('cashoutBtn').style.display = 'none';
            
            drawRoad();
            drawChicken();
        }
        
        // Initial draw
        drawRoad();
        drawChicken();
    </script>
</body>
</html>
