        </div>
        
        <!-- CANVAS -->
        <div class="canvas-container">
            <canvas id="gameCanvas"></canvas>
            <div class="canvas-hint" id="canvasHint" style="display: none;">
                üëÜ Tippe, um zu springen
            </div>
        </div>
        
        <!-- CONTROLS -->
        <div class="controls-panel">
