    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        let balance = <?= $casino_available_balance ?>;
        let gameActive = false;
        let currentBet = 0;
        let crossedLanes = 0;
        let animationFrame = null;
        
        // Game objects
        const chicken = { x: 50, y: 0, size: 35, targetY: 0, jumping: false };
        const lanes = [];
        const cars = [];
        
        const LANE_COUNT = 10;
        const CAR_COLORS = ['#e74c3c', '#3498db', '#2ecc71', '#f39c12', '#9b59b6', '#1abc9c'];
        
        function resizeCanvas() {
            const container = canvas.parentElement;
            const rect = container.getBoundingClientRect();
            canvas.width = rect.width - 32;
            canvas.height = rect.height - 32;
            
            if (!gameActive) {
                drawInitialState();
            }
        }
        
        function setBet(amount) {
            document.getElementById('betInput').value = amount.toFixed(2);
        }
        
        function updateBalance() {
            document.getElementById('balance').textContent = balance.toFixed(2).replace('.', ',') + '‚Ç¨';
        }
        
        function initLanes() {
            lanes.length = 0;
            const laneHeight = canvas.height / LANE_COUNT;
            
            for (let i = 0; i < LANE_COUNT; i++) {
                lanes.push({
                    y: i * laneHeight,
                    height: laneHeight,
                    isGrass: i === 0 || i === LANE_COUNT - 1
                });
            }
        }
        
        function spawnCars() {
            cars.length = 0;
            
            for (let i = 1; i < LANE_COUNT - 1; i++) {
                const laneY = lanes[i].y + lanes[i].height / 2;
                const direction = Math.random() > 0.5 ? 1 : -1;
                const speed = direction * (3 + Math.random() * 4);
                const startX = direction > 0 ? -80 : canvas.width + 80;
                
                cars.push({
                    x: startX + Math.random() * 300,
                    y: laneY,
                    width: 70,
                    height: 35,
                    speed: speed,
                    color: CAR_COLORS[Math.floor(Math.random() * CAR_COLORS.length)],
                    lane: i
                });
            }
        }
        
        function drawBackground() {
            // Sky gradient
            const skyGradient = ctx.createLinearGradient(0, 0, 0, canvas.height / 4);
            skyGradient.addColorStop(0, '#87CEEB');
            skyGradient.addColorStop(1, '#B0E0E6');
            ctx.fillStyle = skyGradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height / 4);
            
            // Lanes
            lanes.forEach((lane, i) => {
                if (lane.isGrass) {
                    // Grass
                    ctx.fillStyle = i === 0 ? '#2d5016' : '#1a3a0f';
                    ctx.fillRect(0, lane.y, canvas.width, lane.height);
                    
                    // Grass pattern
                    ctx.fillStyle = 'rgba(255,255,255,0.1)';
                    for (let x = 0; x < canvas.width; x += 20) {
                        for (let y = lane.y; y < lane.y + lane.height; y += 15) {
                            if (Math.random() > 0.5) {
                                ctx.fillRect(x, y, 2, 8);
                            }
                        }
                    }
                } else {
                    // Road
                    ctx.fillStyle = i % 2 === 0 ? '#2c3e50' : '#34495e';
                    ctx.fillRect(0, lane.y, canvas.width, lane.height);
                    
                    // Lane markings
                    ctx.strokeStyle = '#ecf0f1';
                    ctx.lineWidth = 3;
                    ctx.setLineDash([20, 20]);
                    ctx.beginPath();
                    ctx.moveTo(0, lane.y + lane.height / 2);
                    ctx.lineTo(canvas.width, lane.y + lane.height / 2);
                    ctx.stroke();
                    ctx.setLineDash([]);
                }
            });
        }
        
        function drawChicken() {
            ctx.save();
            ctx.translate(chicken.x, chicken.y);
            
            // Shadow
            ctx.fillStyle = 'rgba(0,0,0,0.3)';
            ctx.beginPath();
            ctx.ellipse(0, chicken.size / 2 + 5, chicken.size / 2, chicken.size / 4, 0, 0, Math.PI * 2);
            ctx.fill();
            
            // Body
            ctx.fillStyle = '#fff';
            ctx.beginPath();
            ctx.arc(0, 0, chicken.size / 2, 0, Math.PI * 2);
            ctx.fill();
            
            // Stroke
            ctx.strokeStyle = '#000';
            ctx.lineWidth = 2;
            ctx.stroke();
            
            // Head
            ctx.fillStyle = '#fff';
            ctx.beginPath();
            ctx.arc(chicken.size / 3, -chicken.size / 3, chicken.size / 3.5, 0, Math.PI * 2);
            ctx.fill();
            ctx.stroke();
            
            // Beak
            ctx.fillStyle = '#ff9800';
            ctx.beginPath();
            ctx.moveTo(chicken.size / 1.5, -chicken.size / 3);
            ctx.lineTo(chicken.size, -chicken.size / 3);
            ctx.lineTo(chicken.size / 1.3, -chicken.size / 4);
            ctx.closePath();
            ctx.fill();
            
            // Eyes
            ctx.fillStyle = '#000';
            ctx.beginPath();
            ctx.arc(chicken.size / 2.5, -chicken.size / 2.5, 3, 0, Math.PI * 2);
            ctx.fill();
            
            // Comb
            ctx.fillStyle = '#f44336';
            ctx.beginPath();
            ctx.arc(chicken.size / 4, -chicken.size / 1.5, 6, 0, Math.PI * 2);
            ctx.fill();
            
            // Legs (animated)
            const legOffset = chicken.jumping ? 5 : 0;
            ctx.strokeStyle = '#ff9800';
            ctx.lineWidth = 3;
            ctx.beginPath();
            ctx.moveTo(-5, chicken.size / 3);
            ctx.lineTo(-5, chicken.size / 3 + 10 + legOffset);
            ctx.moveTo(5, chicken.size / 3);
            ctx.lineTo(5, chicken.size / 3 + 10 + legOffset);
            ctx.stroke();
            
            ctx.restore();
        }
        
        function drawCars() {
            cars.forEach(car => {
                ctx.save();
                ctx.translate(car.x, car.y);
                
                const direction = car.speed > 0 ? 1 : -1;
                if (direction < 0) {
                    ctx.scale(-1, 1);
                }
                
                // Shadow
                ctx.fillStyle = 'rgba(0,0,0,0.3)';
                ctx.fillRect(-car.width / 2, car.height / 2, car.width, 5);
                
                // Car body
                ctx.fillStyle = car.color;
                ctx.fillRect(-car.width / 2, -car.height / 2, car.width, car.height);
                ctx.strokeStyle = '#000';
                ctx.lineWidth = 2;
                ctx.strokeRect(-car.width / 2, -car.height / 2, car.width, car.height);
                
                // Car top
                ctx.fillStyle = car.color;
                ctx.fillRect(-car.width / 3, -car.height, car.width / 1.5, car.height / 2);
                ctx.strokeRect(-car.width / 3, -car.height, car.width / 1.5, car.height / 2);
                
                // Windows
                ctx.fillStyle = 'rgba(100,150,200,0.6)';
                ctx.fillRect(-car.width / 4, -car.height + 2, car.width / 3, car.height / 2.5);
                
                // Wheels
                ctx.fillStyle = '#000';
                ctx.beginPath();
                ctx.arc(-car.width / 3, car.height / 2, 8, 0, Math.PI * 2);
                ctx.arc(car.width / 3, car.height / 2, 8, 0, Math.PI * 2);
                ctx.fill();
                
                // Headlights
                ctx.fillStyle = '#ffeb3b';
                ctx.fillRect(car.width / 2 - 5, -car.height / 3, 3, 8);
                ctx.fillRect(car.width / 2 - 5, car.height / 3 - 8, 3, 8);
                
                ctx.restore();
            });
        }
        
        function updateCars() {
            cars.forEach(car => {
                car.x += car.speed;
                
                if (car.speed > 0 && car.x > canvas.width + 100) {
                    car.x = -100;
                } else if (car.speed < 0 && car.x < -100) {
                    car.x = canvas.width + 100;
                }
            });
        }
        
        function updateChicken() {
            if (chicken.jumping) {
                const diff = chicken.targetY - chicken.y;
                if (Math.abs(diff) > 2) {
                    chicken.y += diff * 0.2;
                } else {
                    chicken.y = chicken.targetY;
                    chicken.jumping = false;
                }
            }
        }
        
        function checkCollision() {
            for (let car of cars) {
                const dx = Math.abs(chicken.x - car.x);
                const dy = Math.abs(chicken.y - car.y);
                
                if (dx < (car.width / 2 + chicken.size / 2) && dy < (car.height / 2 + chicken.size / 2)) {
                    return true;
                }
            }
            return false;
        }
        
        function gameLoop() {
            if (!gameActive) return;
            
            drawBackground();
            updateCars();
            updateChicken();
            drawCars();
            drawChicken();
            
            if (checkCollision()) {
                gameOver(false);
                return;
            }
            
            animationFrame = requestAnimationFrame(gameLoop);
        }
        
        function drawInitialState() {
            initLanes();
            chicken.y = lanes[LANE_COUNT - 1].y + lanes[LANE_COUNT - 1].height / 2;
            chicken.targetY = chicken.y;
            drawBackground();
            drawChicken();
        }
        
        canvas.addEventListener('click', jumpChicken);
        canvas.addEventListener('touchstart', (e) => {
            e.preventDefault();
            jumpChicken(e);
        });
        
        function jumpChicken() {
            if (!gameActive || chicken.jumping) return;
            
            const currentLane = Math.floor((chicken.y / canvas.height) * LANE_COUNT);
            
            if (currentLane > 0) {
                chicken.jumping = true;
                chicken.targetY = lanes[currentLane - 1].y + lanes[currentLane - 1].height / 2;
                crossLane();
            }
        }
        
        async function startGame() {
            const bet = parseFloat(document.getElementById('betInput').value);
            
            if (bet < 0.10 || bet > balance) {
                alert('Ung√ºltiger Einsatz!');
                return;
            }
            
            try {
                const response = await fetch('/api/casino/chicken_cross.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'start', bet })
                });
                const data = await response.json();
                
                if (data.status === 'success') {
                    gameActive = true;
                    currentBet = bet;
                    crossedLanes = 0;
                    balance -= bet;
                    updateBalance();
                    
                    initLanes();
                    chicken.y = lanes[LANE_COUNT - 1].y + lanes[LANE_COUNT - 1].height / 2;
                    chicken.targetY = chicken.y;
                    spawnCars();
                    
                    document.getElementById('betControls').style.display = 'none';
                    document.getElementById('statsBar').classList.add('active');
                    document.getElementById('currentBet').textContent = bet.toFixed(2) + '‚Ç¨';
                    document.getElementById('canvasHint').style.display = 'block';
                    
                    setTimeout(() => {
                        document.getElementById('canvasHint').style.display = 'none';
                    }, 3000);
                    
                    updateStats(0, 1.0, 0);
                    gameLoop();
                }
            } catch (error) {
                alert('Fehler: ' + error.message);
            }
        }
        
        async function crossLane() {
            try {
                const response = await fetch('/api/casino/chicken_cross.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'cross', road: crossedLanes })
                });
                const data = await response.json();
                
                if (data.status === 'safe') {
                    crossedLanes++;
                    updateStats(crossedLanes, data.multiplier, data.potential_win);
                    
                    document.getElementById('cashoutBtn').classList.add('active');
                    document.getElementById('cashoutAmount').textContent = data.potential_win.toFixed(2) + '‚Ç¨';
                    
                    if (crossedLanes >= LANE_COUNT - 1) {
                        setTimeout(() => cashout(), 1000);
                    }
                } else if (data.status === 'hit') {
                    gameOver(false);
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
        
        async function cashout() {
            if (!gameActive) return;
            
            try {
                const response = await fetch('/api/casino/chicken_cross.php', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'cashout' })
                });
                const data = await response.json();
                
                if (data.status === 'success') {
                    gameActive = false;
                    balance = data.new_balance;
                    updateBalance();
                    showResult(true, data.win, data.multiplier);
                }
            } catch (error) {
                alert('Fehler: ' + error.message);
            }
        }
        
        function gameOver(won) {
            gameActive = false;
            if (animationFrame) {
                cancelAnimationFrame(animationFrame);
            }
            showResult(won, 0, 0);
        }
        
        function updateStats(crossed, mult, pot) {
            document.getElementById('crossed').textContent = crossed + '/' + (LANE_COUNT - 1);
            document.getElementById('multiplier').textContent = mult.toFixed(2) + 'x';
            document.getElementById('potential').textContent = pot.toFixed(2) + '‚Ç¨';
        }
        
        function showResult(won, amount, mult) {
            const modal = document.getElementById('resultModal');
            const icon = document.getElementById('resultIcon');
            const title = document.getElementById('resultTitle');
            const amountEl = document.getElementById('resultAmount');
            
            if (won) {
                const profit = amount - currentBet;
                icon.textContent = 'üéâ';
                title.textContent = 'Gewonnen!';
                title.style.color = 'var(--success)';
                amountEl.textContent = '+' + profit.toFixed(2) + '‚Ç¨ (' + mult.toFixed(2) + 'x)';
                amountEl.style.color = 'var(--success)';
            } else {
                icon.textContent = 'üí•';
                title.textContent = '√úberfahren!';
                title.style.color = 'var(--error)';
                amountEl.textContent = '-' + currentBet.toFixed(2) + '‚Ç¨';
                amountEl.style.color = 'var(--error)';
            }
            
            modal.classList.add('active');
        }
        
        function resetGame() {
            document.getElementById('resultModal').classList.remove('active');
            document.getElementById('betControls').style.display = 'block';
            document.getElementById('statsBar').classList.remove('active');
            document.getElementById('cashoutBtn').classList.remove('active');
            
            gameActive = false;
            crossedLanes = 0;
            
            drawInitialState();
        }
        
        // Initialize
        window.addEventListener('resize', resizeCanvas);
        window.addEventListener('load', () => {
            resizeCanvas();
            drawInitialState();
        });
    </script>
</body>
</html>
